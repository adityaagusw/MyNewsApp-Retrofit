<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolBarMenuAwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:titleTextColor="#FFFFFF"
            app:subtitleTextColor="#FFFFFF"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </android.support.v7.widget.Toolbar>

    <ViewFlipper
            android:id="@+id/gmbAllKategori"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:autoStart="true"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <Button
                android:id="@+id/btnSemuaBerita"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Semua Berita"
                android:textColor="@color/Font"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:textSize="17dp"
                android:background="@drawable/btn_custom_fix"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">

            <View
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:background="@color/garisKategori"
                    android:layout_margin="5dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategori"
                    android:gravity="center"
                    android:textSize="20dp"/>

            <View
                    android:layout_width="125dp"
                    android:layout_height="1dp"
                    android:background="@color/garisKategori"
                    android:layout_margin="5dp"/>

        </LinearLayout>


        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                    <android.support.v7.widget.CardView
                            android:id="@+id/cvOlahraga"
                            android:layout_width="150dp"
                            android:layout_height="150dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:background="@drawable/or_custom_fix">

                            <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/ic_directions_bike_black_24dp"
                                    android:layout_gravity="center"/>

                            <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/lightGray"
                                    android:layout_margin="5dp"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Olahraga"
                                    android:layout_gravity="center"
                                    android:textColor="@color/Font"
                                    android:textStyle="bold"
                                    android:textSize="20dp"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                            android:id="@+id/cvEntertainment"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="30dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:background="@drawable/enter_custom_fix">

                            <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_airplay_black_24dp"/>

                            <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/lightGray"
                                    android:layout_margin="5dp"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Entertainment"
                                    android:layout_gravity="center"
                                    android:textColor="@color/Font"
                                    android:textStyle="bold"
                                    android:textSize="20dp"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                    <android.support.v7.widget.CardView
                            android:id="@+id/cvBisnis"
                            android:layout_width="150dp"
                            android:layout_height="150dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:background="@drawable/bis_custom_fix">

                            <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_business_center_black_24dp"/>

                            <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/lightGray"
                                    android:layout_margin="5dp"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bisnis"
                                    android:layout_gravity="center"
                                    android:textColor="@color/Font"
                                    android:textStyle="bold"
                                    android:textSize="20dp"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                            android:id="@+id/cvPolitik"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="30dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:background="@drawable/poli_custom_fix">

                            <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/ic_group_black_24dp"
                                    android:layout_gravity="center"/>

                            <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/lightGray"
                                    android:layout_margin="5dp"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Politik"
                                    android:layout_gravity="center"
                                    android:textColor="@color/Font"
                                    android:textStyle="bold"
                                    android:textSize="20dp"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                    <android.support.v7.widget.CardView
                            android:id="@+id/cvOtomotif"
                            android:layout_width="150dp"
                            android:layout_height="150dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:background="@drawable/oto_custom_fix">

                            <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/ic_build_black_24dp"
                                    android:layout_gravity="center"/>

                            <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/lightGray"
                                    android:layout_margin="5dp"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Otomotif"
                                    android:layout_gravity="center"
                                    android:textColor="@color/Font"
                                    android:textStyle="bold"
                                    android:textSize="20dp"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                            android:id="@+id/cvFoodandTravel"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="30dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:background="@drawable/foodtrav_custom_fix">

                            <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/ic_location_city_black_24dp"
                                    android:layout_gravity="center"/>

                            <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/lightGray"
                                    android:layout_margin="5dp"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Food and Travel"
                                    android:layout_gravity="center"
                                    android:textColor="@color/Font"
                                    android:textStyle="bold"
                                    android:textSize="20dp"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

        </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>